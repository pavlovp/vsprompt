{
    "name": "vsprompt",
    "displayName": "VSPrompt",
    "description": "OpenAI completions saved to new file",
    "version": "1.0.0",
    "funding": "https://www.buymeacoffee.com/pavelpavlov",
    "engines": {
        "vscode": "^1.58.0"
    },
    "publisher": "PavelPavlov",
    "author": {
        "name" : "Pavel Pavlov",
        "email" : "hi@pavelpavlov.com",
        "url" : "https://twitter.com/PavlovVulcs"
      },
    "repository": {
        "type": "git",
        "url":"https://github.com/pavlovp/vsprompt"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./extension.js",
    "contributes": {
        "commands": [
            {
                "command": "extension.invokeOpenAI",
                "title": "Invoke OpenAI API"
            }
        ],
        "keybindings": [
            {
                "command": "extension.invokeOpenAI",
                "key": "ctrl+shift+a",
                "mac": "cmd+shift+a",
                "when": "editorTextFocus"
            }
        ],

        "icon": "vsprompt.svg",
        "configuration": {
            "type": "object",
            "title": "VSPrompt Extension Configuration",
            "properties": {
                "openai.apiKey": {
                    "type": "string",
                    "description": "API key for the OpenAI API."
                }
            }
        }
    },
    "dependencies": {
        "axios": "^0.24.0",
        "openai": "^3.2.1"
    },
    "icon": "ai.png",
    "devDependencies": {
        "@types/node": "^14.14.37",
        "typescript": "^4.3.5",
        "vscode-test": "^1.6.0"
    }
}
